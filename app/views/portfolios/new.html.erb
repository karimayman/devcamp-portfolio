<h1> create a new portfolio item </h1>
<%= form_for(@portfolio_item) do |form| %>
<%= form.label :title %>
  <div class="field">
    <%= form.text_field :title %>
  </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle %>
    </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
